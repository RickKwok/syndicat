{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [ 2, 2 ],
        "linebreak-style": [ 2, "unix" ],
        "quotes": [ 0, "single" ],
        "semi": [ 2, "always" ],
        "curly": [ 0, "multi", "consistent" ],
        "no-console": 0,
        "no-unused-vars": [ 2, {
            "args": "after-used",
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
        }]
    }
}
